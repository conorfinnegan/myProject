<h1>Listing events</h1>

<table>
  <tr>
    <th>Venue</th>
    <th>Eventdate</th>
    <th>Type</th>
    <th>Home</th>
    <th>Away</th>
    <th>Artist</th>
    <th>Image</th>
    <th>Video</th>
    <th>Cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.venue_id %></td>
    <td><%= event.eventdate %></td>
    <td><%= event.type_id %></td>
    <td><%= event.home %></td>
    <td><%= event.away %></td>
    <td><%= event.artist %></td>
    <td><%= event.image %></td>
    <td><%= event.video %></td>
    <td><%= event.cost %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

